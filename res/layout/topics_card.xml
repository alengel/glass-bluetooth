<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/topics_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/topics_body_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/glass_card_body_height"
        android:layout_marginLeft="@dimen/glass_card_margin"
        android:layout_marginTop="@dimen/glass_card_margin"
        android:layout_marginRight="@dimen/glass_card_margin"
        tools:ignore="UselessLeaf" >

        <TextView
            android:id="@+id/topics2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/topics3"
            android:layout_below="@+id/topics7"
            android:layout_marginRight="19dp"
            android:ellipsize="end"
            android:singleLine="true" />

        <TextView
            android:id="@+id/topics4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/topics2"
            android:layout_toLeftOf="@+id/topics7"
            android:ellipsize="end"
            android:singleLine="true" />

        <TextView
            android:id="@+id/topics6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/topics3"
            android:layout_marginTop="21dp"
            android:layout_toRightOf="@+id/topics1"
            android:ellipsize="end"
            android:singleLine="true" />

        <TextView
            android:id="@+id/topics5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/topics4"
            android:layout_below="@+id/topics6"
            android:ellipsize="end"
            android:singleLine="true" />

        <TextView
            android:id="@+id/topics7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/topics3"
            android:ellipsize="end"
            android:singleLine="true" />

        <TextView
            android:id="@+id/topics3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="62dp"
            android:ellipsize="end"
            android:singleLine="true" />

        <TextView
            android:id="@+id/topics1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/topics6"
            android:layout_toLeftOf="@+id/topics2"
            android:ellipsize="end"
            android:singleLine="true" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/topics_footer_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_marginLeft="@dimen/glass_card_margin"
        android:layout_marginBottom="@dimen/glass_card_footer_margin"
        android:layout_marginRight="@dimen/glass_card_margin"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/topics_footer"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/topics_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/glass_card_margin"
            android:ellipsize="end"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </LinearLayout>

</FrameLayout>